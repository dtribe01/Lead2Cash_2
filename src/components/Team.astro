---

<section class="py-16 bg-gradient-to-b from-indigo-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12" data-aos="fade-down">
      <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl md:text-6xl">
        The Crew
      </h1>
      <p class="mt-3 max-w-md mx-auto text-base text-gray-600 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
        We are industry experts dedicated to transforming businesses through process optimization and technology integration
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8 mt-16">
      {team.map((member, index) => (
        <div 
          class="bg-white rounded-lg shadow-md overflow-hidden group"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="relative">
            <img 
              src={member.image} 
              alt={member.name}
              class="w-full h-64 object-cover"
            />
            <a 
              href={member.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="absolute top-4 right-4 bg-white p-2 rounded-full shadow-md opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              title={`Connect with ${member.name} on LinkedIn`}
            >
              <svg class="w-5 h-5 text-[#0A66C2]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          </div>
          <div class="p-6">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="text-xl font-semibold text-gray-900">{member.name}</h3>
                <p class="text-indigo-600 font-medium mt-1">{member.role}</p>
              </div>
            </div>
            <p class="text-gray-600 mt-4 text-sm">{member.description}</p>
          </div>
        </div>
      ))}
    </div>


</section>